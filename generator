<body>
  <main class="container" role="main" aria-label="Generador de comprobantes de PayPal">
    <form id="generateForm" aria-describedby="formDesc">
      <div id="formDesc" style="font-size:14px; margin-bottom:1rem; color:#555;">
        Rellena los campos para generar un comprobante de pago PayPal.
      </div>
      <label for="email">Correo electrónico del destinatario</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        placeholder="ejemplo@correo.com" 
        required 
        autocomplete="email"
        aria-required="true"
      />

      <label for="amount">Cantidad</label>
      <input 
        type="number" 
        id="amount" 
        name="amount" 
        step="0.01" 
        min="0.01" 
        placeholder="25,00" 
        required 
        aria-required="true"
      />

      <label for="currency">Moneda</label>
      <select id="currency" name="currency" aria-required="true" required>
        <option value="EUR" selected>EUR</option>
        <option value="USD">USD</option>
        <option value="GBP">GBP</option>
        <option value="MXN">MXN</option>
        <option value="CAD">CAD</option>
        <option value="AUD">AUD</option>
      </select>

      <button type="submit" class="generate-btn" aria-label="Generar comprobante">
        Generar comprobante
      </button>
    </form>

    <section aria-live="polite" id="receiptSection" aria-relevant="additions" aria-atomic="true">
      <!-- Comprobante generado aparecerá aquí -->
    </section>
  </main>

  <script>
    const form = document.getElementById('generateForm');
    const receiptSection = document.getElementById('receiptSection');

    // Función para formatear números al formato XX,YY con coma decimal
    function formatAmount(num) {
      // For European-style decimal with comma
      return Number(num).toLocaleString('es-ES', { minimumFractionDigits: 2, maximumFractionDigits: 2 });
    }

    form.addEventListener('submit', e => {
      e.preventDefault();

      const email = form.email.value.trim();
      const amountRaw = form.amount.value;
      const currency = form.currency.value;

      if (!email || !amountRaw || Number(amountRaw) <= 0) {
        receiptSection.innerHTML = '<p style="color:red; font-weight:bold;">Por favor, rellena todos los campos correctamente.</p>';
        return;
      }

      const amountFormatted = formatAmount(amountRaw);

      const receiptHTML = `
        <div class="receipt" role="region" aria-label="Comprobante generado">
          Has enviado <strong>${amountFormatted} ${currency}</strong> a <strong>${email}</strong>
        </div>
        <button class="btn-send-more" type="button" onclick="alert('Función enviar más dinero no implementada')"
                aria-label="Enviar más dinero">
          Enviar más dinero
        </button>
        <div>
          <a class="summary-link" href="#" onclick="alert('Función resumen no implementada'); return false;" tabindex="0" aria-label="Ir a resumen">Ir a Resumen</a>
        </div>
      `;

      receiptSection.innerHTML = receiptHTML;
    });
  </script>
</body>
