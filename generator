<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Nicks de 4 Letras con Simulación</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin-top: 50px;
        }
        #nickname {
            font-size: 24px;
            margin: 20px;
            color: #333;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Generador de Nicks de 4 Letras</h1>
    <div>
        <label><input type="radio" name="nickType" value="clean" checked> Clean</label>
        <label><input type="radio" name="nickType" value="semi"> Semi</label>
    </div>
    <div id="nickname">Tu Nick aparecerá aquí</div>
    <button onclick="generateNickname()">Generar Nick</button>
    <button onclick="checkAvailability()">Verificar Disponibilidad</button>
    <div id="availability"></div>

    <script>
        function generateNickname() {
            const cleanLetters = 'abcdefghjkmnpqrstuvwxyz'; // Without i,l,o
            const allLetters = 'abcdefghijklmnopqrstuvwxyz';
            const numbers = '23456789'; // Without 0,1
            
            const isSemi = document.querySelector('input[name="nickType"]:checked').value === 'semi';
            const letters = isSemi ? allLetters : cleanLetters;
            
            let nickname = '';
            
            // Generar 4 caracteres
            for (let i = 0; i < 4; i++) {
                if (isSemi && Math.random() > 0.7 && i > 0) {
                    nickname += numbers.charAt(Math.floor(Math.random() * numbers.length));
                } else {
                    nickname += letters.charAt(Math.floor(Math.random() * letters.length));
                }
            }
            
            document.getElementById("nickname").innerText = nickname;
        }

        function checkAvailability() {
            const nickname = document.getElementById("nickname").innerText;
            if (nickname.length !== 4) {
                document.getElementById("availability").innerText = "Genera un nick válido de 4 letras primero";
                return;
            }
            
            // Simulación simple de disponibilidad (50% de probabilidad)
            const isAvailable = Math.random() > 0.5;
            const type = document.querySelector('input[name="nickType"]:checked').value;
            if (isAvailable) {
                document.getElementById("availability").innerText = 
                    `Nick ${type} "${nickname}" está disponible!`;
            } else {
                document.getElementById("availability").innerText = 
                    `Nick ${type} "${nickname}" está en uso.`;
            }
        }
    </script>
</body>
</html>

